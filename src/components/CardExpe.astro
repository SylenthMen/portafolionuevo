---
const { logo } = Astro.props;
const { trabajo } = Astro.props;
const { time } = Astro.props;
const { puesto } = Astro.props;
const { descrip } = Astro.props;
---

<article
  id="experiencia"
  class="flex lg:flex-row flex-col md:flex-row max-w-[650px] border border-[#5600bc] justify-around items-center text-center p-4 font-berlin bg-white dark:bg-black rounded-2xl -translate-y-[300px]"
>
  <div>
    <img class="w-72" src={logo} alt="work image" />
  </div>
  <div class="w-[362px]">
    <h2 class="dark:text-white pb-4 capitalize font-bold text-3xl">
      {trabajo}
    </h2>
    <div
      class="badge text-lg font-bold pb-4 hover:scale-105 transition-all capitalize"
    >
      <div class="block glow bg-white dark:bg-black">
        <p>{time}</p>
      </div>
    </div>
    <h3 class="my-4 text-3xl capitalize">{puesto}</h3>
    <p class="text-xl mb-4">{descrip}</p>
  </div>
</article>

<style>
  body {
    background-color: #000;
    color: #fff;
  }

  .block {
    position: relative;
    margin: 10% auto 0;
    width: 220px;
    height: 40px;

    border-radius: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .glow::before,
  .glow::after {
    content: "";
    position: absolute;
    left: -2px;
    top: -2px;
    background: linear-gradient(45deg, #3500bc, #ff35ff, #3500bc, #ff35ff);
    border-radius: 25px;
    background-size: 400%;
    width: calc(100% + 5px);
    height: calc(100% + 5px);
    z-index: -1;
    animation: animate 20s linear infinite;
  }

  @keyframes animate {
    0% {
      background-position: 0 0;
    }

    50% {
      background-position: 400% 0;
    }

    100% {
      background-position: 0 0;
    }
  }

  .glow::after {
    filter: blur(20px);
    opacity: 0.5;
  }
</style>
